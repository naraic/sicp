;iterative sum function

(define (sum term a next b)
  (define (iter a result)
    (if (> a b)
	result
	(iter (next a) (+ result (term a)))))
  (iter a 0))

(define (inc n)
  (+ 1 n))

(define (identity n) n)

(define (cube n)
  (* n n n))

(sum identity 1 inc 10)

(sum cube 1 inc 10)

